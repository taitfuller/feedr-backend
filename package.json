{
  "name": "st-marks-graveyard.backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "cd .. && npm i && husky install"
  },
  "dependencies": {
    "convict": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongoose": "^5.13.7",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@shelf/jest-mongodb": "^2.0.1",
    "@types/convict": "^6.1.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^15.12.2",
    "@types/passport": "^1.0.7",
    "@types/passport-github": "^1.1.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.0",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint --cache --fix --max-warnings=0",
    "*": "prettier --ignore-unknown --write"
  }
}
